{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "paths": {
      "@hypertube/libs": ["../libs/src"]
    }
  },
  "exclude": ["node_modules"]
}
